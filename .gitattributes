# === LFS: binary assets ===
*.png  filter=lfs diff=lfs merge=lfs -text
*.jpg  filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.gif  filter=lfs diff=lfs merge=lfs -text
*.webp filter=lfs diff=lfs merge=lfs -text
*.svg  filter=lfs diff=lfs merge=lfs -text
*.mp3  filter=lfs diff=lfs merge=lfs -text
*.wav  filter=lfs diff=lfs merge=lfs -text
*.ogg  filter=lfs diff=lfs merge=lfs -text

# Do not track generated documentation assets in LFS; store real files.
docs/assets/** -filter -diff -merge -text
docs/assets/**/*.png -filter -diff -merge -text
docs/assets/**/*.svg -filter -diff -merge -text

# === Text files (keep normal diffs + EOL normalization) ===
*.js   text
*.ts   text
*.tsx  text
*.jsx  text
*.css  text
*.html text
*.json text
*.yml  text
*.yaml text
*.md   text
*.txt  text

# === Do not diff generated bundles/mirrors ===
/dist/assets/* -diff
/docs/assets/* -diff
*.min.js -diff
*.map -diff
